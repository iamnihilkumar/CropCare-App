<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F4F7F9"
android:padding="18dp">

<!-- Header Title -->

    <!-- City Search Card -->

    <!-- Weather Display Card -->

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="245dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="87dp"
        android:fontFamily="sans-serif-medium"
        android:text="ðŸŒ¤ Weather Forecast"
        android:textColor="#1B5E20"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeader"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_input_card"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">


        <EditText
            android:id="@+id/etCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Enter city"
            android:padding="12dp"
            android:textColor="#000"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_round_green"
            android:padding="10dp"
            android:src="@drawable/ic_search"
            app:tint="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutWeatherCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutSearch"
        android:layout_marginTop="23dp"
        android:background="@drawable/bg_card_white"
        android:elevation="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_weather" />

        <TextView
            android:id="@+id/tvCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="City Name"
            android:textColor="#1B5E20"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="--Â°C"
            android:textColor="#2E7D32"
            android:textSize="42sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Weather data will appear here"
            android:textColor="#6E6E6E"
            android:textSize="16sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Back"
        android:textSize="18sp"
        android:background="#2E7D32"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_below="@id/layoutWeatherCard"
        />
</RelativeLayout>

