<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:backgroundTint="@android:color/white"
    android:elevation="5dp"
    android:radius="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Image -->
        <ImageView
            android:id="@+id/imgHistory"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_rounded"
            android:clipToOutline="true"
            android:contentDescription="History Image" />

        <!-- Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="14dp">

            <TextView
                android:id="@+id/tvHistoryDisease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disease Name"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvHistoryConfidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidence: 93%"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/tvHistoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Feb 2025, 10:30 AM"
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginTop="3dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
