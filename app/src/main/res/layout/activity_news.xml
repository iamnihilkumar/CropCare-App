<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F4F7F9"
android:padding="18dp">

<!-- Page Heading -->
<TextView
    android:id="@+id/tvHeading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ðŸŒ¾ Agriculture News"
    android:textSize="26sp"
    android:textColor="#1B5E20"
    android:textStyle="bold"
    android:fontFamily="sans-serif-medium"
    android:layout_marginBottom="14dp" />

<!-- Search Bar -->
<LinearLayout
    android:id="@+id/layoutSearchNews"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_below="@id/tvHeading"
    android:background="@drawable/bg_input_card"
    android:paddingHorizontal="14dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:elevation="3dp">

    <EditText
        android:id="@+id/etSearchNews"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:hint="Search news..."
        android:textColor="#000"
        android:textColorHint="#7D7D7D"
        android:paddingStart="6dp"
        android:fontFamily="sans-serif"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/btnSearchNews"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="4dp"
        android:src="@drawable/ic_search"
        app:tint="#2E7D32" />
</LinearLayout>

<!-- News List Card -->
<LinearLayout
    android:id="@+id/layoutListContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/layoutSearchNews"
    android:layout_marginTop="18dp"
    android:background="@drawable/bg_card_white"
    android:elevation="4dp"
    android:padding="12dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
</RelativeLayout>
