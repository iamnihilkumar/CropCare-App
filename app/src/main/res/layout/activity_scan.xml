<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7F9"
    android:padding="22dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¸ Crop Disease Scanner"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload a clear leaf image for best results"
            android:textColor="#6D6D6D"
            android:textSize="13sp"
            android:layout_marginBottom="18dp" />

        <FrameLayout
            android:id="@+id/framePreview"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:background="@drawable/bg_dashed_upload"
            android:padding="10dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_upload_leaf"
                android:padding="15dp"/>
        </FrameLayout>

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ðŸ“ Choose Image"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/card_bg_green"
            android:textColor="#1B5E20"/>

        <Button
            android:id="@+id/btnProceed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ðŸ” Analyze Image"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_bg_blue"
            android:textColor="@android:color/white"
            android:enabled="false"/>

        <!-- Simple Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:text="â—€ Back"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:background="@drawable/card_bg_blue"
            android:textSize="17sp"/>
    </LinearLayout>
</ScrollView>
